<tr class="border-top">
	<td><strong><%= @crash.id %></strong></td>
	<td><strong><%= @crash.user_crash_date.strftime("%d.%m.%Y %H:%M:%S") rescue "" %></strong></td>
	<td><%= @crash.package_name %></td>
	<td><%= @crash.app_version_name %> (<%= @crash.app_version_code %>)</td>
	<td><%= @crash.android_version %></td>
</tr>
<tr>
	<td>&nbsp;</td>
	<td><%= @crash.user_comment %></td>
	<td><%= @crash.total_mem_size %></td>
	<td><%= @crash.available_mem_size %></td>
	<td><%= @crash.thread_details %></td>
</tr>
<tr class="thin-border-top">
	<td>&nbsp;</td>
	<td colspan="4">
		<%= @crash.stack_trace.gsub("\t", "    ").gsub(" ", "&nbsp;").gsub("\n", "<br />\n") rescue "" %>
	</td>
</tr>
<tr class="thin-border-top">
	<td>&nbsp;</td>
	<td colspan="4">
		<%= @crash.logcat.gsub("\t", "    ").gsub("\n", "<br />\n") rescue "" %>
	</td>
</tr>
